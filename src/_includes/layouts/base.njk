<!DOCTYPE html>
<html lang="en">
    <head>
        {% block pageHead %}
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>
                {{ title }}
            </title>

            {# Fonts and stylesheets #}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Courier+Prime&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="/assets/css/styles.css">
        {% endblock %}
    </head>



    <body>
        {% set headerNavUrl = headerNav.url if headerNav.url else '/info' %}
        {% set headerNavLabel = headerNav.label if headerNav.label else 'Info' %}

        {% block pageHeader %}
            <header class="md:fixed md:top-0 md:w-full mt-7 mb-10 px-gutter">
                <nav class="flex justify-between">
                    <div class="md:w-1/6 md:pr-gutter">
                        <a href="/" class="">
                            <h1 class="text-base">
                                Lucia Bell-Epstein
                            </h1>
                        </a>
                    </div>
                    <div class="md:w-1/6 text-right">
                        <a href="{{ headerNavUrl }}" class="">
                            {{ headerNavLabel }}
                        </a>
                    </div>
                </nav>
            </header>
        {% endblock %}



        {% block pageMain %}
            <main class="md:mt-7 px-gutter">
                {% block main %}{% endblock %}
            </main>
        {% endblock %}



        {% block pageFooter %}{% endblock %}
        {% block pageBodyEnd %}{% endblock %}
    </body>
</html>
